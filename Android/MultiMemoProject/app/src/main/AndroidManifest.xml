<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.student.multimemoproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MemoInsertActivity"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity
            android:name=".PhotoCaptureActivity"
            android:screenOrientation="landscape"
            >
        </activity>

        <activity
            android:name=".PhotoSelectionActivity"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity
            android:name=".HandwritingMakingActivity"
            android:screenOrientation="landscape"
            >
        </activity>
        <activity
            android:name=".PenPaletteDialog"
            android:theme="@style/Theme.AppCompat.Dialog"
            android:screenOrientation="landscape"
            >
        </activity>
        <activity
            android:name=".ColorPaletteDialog"
            android:theme="@style/Theme.AppCompat.Dialog"
            android:screenOrientation="landscape"
            >
        </activity>

        <activity
            android:name=".VideoRecordingActivity"
            android:screenOrientation="landscape"
            >
        </activity>
        <activity
            android:name=".VideoPlayActivity"
            android:screenOrientation="landscape"
            >
        </activity>
        <activity
            android:name=".VideoSelectionActivity"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name=".VoiceRecordingActivity"
            android:theme="@style/Theme.AppCompat.Dialog"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name=".VoicePlayActivity"
            android:theme="@style/Theme.AppCompat.Dialog"
            android:screenOrientation="portrait"
            >
        </activity>
        
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>