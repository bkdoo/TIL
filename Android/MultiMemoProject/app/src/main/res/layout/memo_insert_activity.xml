<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ffffffff">

        <com.example.student.multimemoproject.common.TitleBackgroundButton
            android:id="@+id/titleBackgroundBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:text="메모 추가"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contentsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mediaLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/insert_photo"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:background="#fffeff85"
                android:scaleType="fitCenter"
                android:src="@drawable/person_add" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <com.example.student.multimemoproject.common.TitleBitmapButton
                    android:id="@+id/insert_videoBtn"
                    android:layout_width="100dp"
                    android:layout_height="76dp"
                    android:text="동영상"
                    android:textColor="#ff420000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <com.example.student.multimemoproject.common.TitleBitmapButton
                    android:id="@+id/insert_voiceBtn"
                    android:layout_width="100dp"
                    android:layout_height="76dp"
                    android:layout_marginTop="10dp"
                    android:text="음성"
                    android:textColor="#ff420000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/memoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/insert_memoEdit"
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/memo_back"
                    android:gravity="top"
                    android:padding="10dp"
                    android:textColor="#ff000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/insert_handwriting"
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/handwriting_back"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <com.example.student.multimemoproject.common.TitleBitmapButton
                    android:id="@+id/insert_textBtn"
                    android:layout_width="100dp"
                    android:layout_height="76dp"
                    android:text="텍스트"
                    android:textColor="#ff420000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <com.example.student.multimemoproject.common.TitleBitmapButton
                    android:id="@+id/insert_handwritingBtn"
                    android:layout_width="100dp"
                    android:layout_height="76dp"
                    android:layout_marginTop="10dp"
                    android:text="손글씨"
                    android:textColor="#ff420000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <com.example.student.multimemoproject.common.TitleBitmapButton
            android:id="@+id/insert_dateBtn"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.example.student.multimemoproject.common.TitleBitmapButton
                android:id="@+id/insert_saveBtn"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:text="저장"
                android:textColor="#ff420000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.example.student.multimemoproject.common.TitleBitmapButton
                android:id="@+id/insert_cancelBtn"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:text="닫기"
                android:textColor="#ff420000"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
